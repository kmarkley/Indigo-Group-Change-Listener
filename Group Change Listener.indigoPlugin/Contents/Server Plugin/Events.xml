<?xml version="1.4"?>
<Events>
	<Event type="custom" id="listenerGroup">
		<Name>Listener Group</Name>
		<ConfigUI>	
			<Field id='label1' type='label' >
				<Label>Select the Device(s) and/or Variable(s) to listen to for the Trigger:
				</Label>
			</Field>	
            <Field id="separator1" type="separator"/>
			<Field id='triggerDevices' type='list' rows='12'>
				<Label>Devices:</Label>
				<List class="indigo.devices" />
			</Field>
	        <Field id="filterLogic" type="menu">
                <Label>Filter Logic:</Label>
                <List>
                    <Option value="Ignore">Ignore All</Option>
                    <Option value="Require">Require One</Option>
                </List>
            </Field>
			<Field id='stateFilter' type='textfield'>
			    <Label>State Filter:</Label>
			</Field>
			<Field id="stateFilterLabel" type="label" fontColor="darkgray" fontSize="small" alignWithControl="true">
                <Label>Space-separated list of state ID's. Applies to all devices.</Label>
            </Field>
			<Field id='commEnabled' type='checkbox' defaultValue='false'>
			    <Label>Comm Status:</Label>
			    <Description>Should trigger fire if device's communication status is enabled/disabled?.   </Description>
			</Field>
            <Field id="separator2" type="separator"/>
			<Field id='triggerVariables' type='list' rows='12'>
				<Label>Variables:</Label>
				<List class="indigo.variables"/>
			</Field>
            <Field id="separator3" type="separator"/>
			<Field id='saveBool' type='checkbox'>
			    <Label>Save to variable?:</Label>
			    <Description>Optionally save the name of the triggering device/variable to a variable.   </Description>
			</Field>
			<Field id='saveVar' type='menu' visibleBindingId='saveBool'  visibleBindingValue='true' alwaysUseInDialogHeightCalc='true'>
				<Label>Select Variable:</Label>
				<List class="indigo.variables" />
			</Field>
		</ConfigUI>
	</Event>	
</Events>